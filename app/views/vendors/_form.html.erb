<%= form_for(vendor) do |f| %>
  <% if vendor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vendor.errors.count, "error") %> prohibited this vendor from being saved:</h2>

      <ul>
      <% vendor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="card text-xs-center" style="margin-top:10px;">
    <div class="card-header">
      <%= action_name.titleize %> Vendor
    </div>
    <div class="card-block">

      <div class="form-group row">
        <%= f.label :title, :class => "col-xs-2 col-form-label", :for => "vendor[title]" %>
        <div class="col-xs-10">
          <%= f.text_field :title, :class => "form-control"  %>

        </div>
      </div>

      <div class="form-group row">
        <%= f.label :link, :class => "col-xs-2 col-form-label", :for => "vendor[link]" %>

        <div class="col-xs-10">
          <%= f.text_field :link, :class => "form-control"  %>

        </div>
      </div>




      <div class="form-group row">
        <%= f.label :showtoall, 'Show To All', :class => "col-xs-2 ", :for => "vendor[showtoall]" %>

        <div class="col-xs-10">
              <%= f.check_box :showtoall, :class => "form-control"  %>
        </div>
      </div>





      <div class="actions">
        <%= f.submit :class => "btn btn-primary btn-block" %>
      </div>

    </div>


  </div>



<% end %>
